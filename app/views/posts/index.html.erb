<div class='container py-5'>
<h2 class='text-center border-bottom pb-4 font-weight-bolder'>投稿一覧</h2>
  <div class="row">
    <div class="col-lg-10 offset-lg-1 mt-5">
      <!-- 検索フォーム -->
      <%= render 'shared/search' %>
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @posts, theme: 'twitter-bootstrap-4'  %>
    </div>
  </div>
</div>