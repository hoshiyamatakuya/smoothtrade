<div class='container py-5'>
<h2 class='text-center border-bottom pb-4 font-weight-bolder'><%= @user.username %>さんの投稿一覧</h2>

  <!-- 掲示板一覧 -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <% @posts.each do |post|%>
            <%= render 'posts/post', post: post %>
          <% end %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
    <%= paginate @posts, theme: 'twitter-bootstrap-4'  %>
  </div>
</div>
