<div class='container py-5'>
<h2 class='text-center pb-4 font-weight-bolder'>自分がいいねした投稿一覧</h2>
  <div class="row">
    <div class="col-lg-10 offset-lg-1 border-bottom pb-4">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3">
          <input class="form-control" placeholder="検索ワード" type="search" />
          <div class="input-group-append">
            <input type="submit" value="検索" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row pt-4">
    <div class="col-12">
      <div class="row">
        <% if @bookmark_posts.present? %>
          <%= render @bookmark_posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>