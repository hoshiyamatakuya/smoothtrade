<%= form_with model: post, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :post_image %>
    <%= f.file_field :post_image, onchange: 'previewFileWithId(preview)',class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :post_image_cache %>
  </div>
  <div class='mt-3 mb-3 text-center'>
    <%= image_tag post.post_image.url,
                  id: 'preview',
                  size: '200x250' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.label :wish_body %>
    <%= f.text_area :wish_body, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.label :year %>
    <%= f.text_area :year, class: 'form-control', rows: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :post_category %>
    <%= f.text_area :post_category, class: 'form-control', rows: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :goods_category %>
    <%= f.text_area :goods_category, class: 'form-control', rows: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :goods_name %>
    <%= f.text_area :goods_name, class: 'form-control', rows: 1 %>
  </div>
  <br>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>