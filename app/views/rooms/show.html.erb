<div class='container py-5 text-center'>
<h1 class='text-center border-bottom pb-4 font-weight-bolder'>DM</h1>
<div class='mt-5'>
<p class= 'text-center font-weight-bolder'>参加者</p>
<div class='text-center'>
  <% @entries.each do |e| %>
    <h8><strong><a href="/users/<%= e.user.id %>"><%= e.user.username%>さん</a></strong></h8>
  <% end %>
</div>

<hr>
<p class='text-center text-white font-weight-bolder bg-dark'>↓dmメッセージ本文↓</p>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <strong><%= m.body %></strong>
    <%= image_tag m.user.avatar.url, size: '40x40', class: 'rounded-circle mr15'%>
    <small><strong><a href="/users/<%= m.user_id %>"><%= m.user.username %>さん</a></strong></small>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @message do |f| %>
  <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <br>
  <br>
  <%= f.submit "投稿する", class:'btn btn-secondary' %>
<% end %>
<br>
<%= link_to "ユーザー一覧に戻る", users_path, class:'btn btn-light' %>
</div>
</div>